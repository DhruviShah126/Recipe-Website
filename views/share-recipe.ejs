<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Share Your Recipe</h1>
    <!-- <div class="col-lg-6 mx-auto">
        <p class="lead">Share your recipe!</p>
    </div> -->
</div>

<div class="row justify-content-center">
    <div class="row g-3">
        <form action="/share-recipe" enctype="multipart/form-data" method="POST">
            <div class="row g-3">
                <div class="col-12">
                    <label for="name" class="form-label">Recipe Name</label>
                    <input type="text" name="name" id="name" class="form-control">
                </div>
                <div class="col-12">
                    <label for="category">Select Category</label>
                    <select class="form-select form-control" name="category" aria-label="Category">
                        <option selected>Select Category</option>
                        <option value="Chinese">Chinese</option>
                        <option value="Indian">Indian</option>
                        <option value="Italian">Italian</option>
                        <option value="Mexican">Mexican</option>
                        <option value="Thai">Thai</option>
                        <option value="Dessert">Dessert</option>
                    </select>
                </div>
                <div class="col-12">
                    <label for="ingredients" class="form-label">Ingredients</label>
                    <div class="ingredientsList">
                        <div class="ingredientDiv mb-1">
                            <input type="text" name="ingredients" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <button type="button" class="btn btn-outline-primary" id="addIngredients">Add Ingredient</button>
                </div>
                <div class="col-12">
                    <label for="description" class="form-label">How to Make</label>
                    <textarea name="description" id="description" cols="30" rows="4" class="form-control"></textarea>
                </div>
                <div class="col-12">
                    <label for="image">Item Image</label>
                    <input type="file" class="form-control" name="image" accept="image/**">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Share Recipe</button>
                </div>
            </div>
        </form>
    </div>
</div>